
<%= form_with model: @student do |i|%>
<div class="form-group">
    <%= i.label :first_name %><br>
    <%= i.text_field :first_name, class: "from-controll form-control-lg" %>
</div>
<div class="form-group"> 
    <%= i.label :last_name %><br>
    <%= i.text_field :last_name, class: "from-controll form-control-lg" %>
</div>
<div class="form-group">
    <%= i.label :email %><br>
    <%= i.text_field :email, class: "from-controll form-control-lg" %>
</div>
<div class="form-group">
    <%= i.label :date_of_birth %><br>
    <%= i.date_field :date_of_birth, class: "from-controll form-control-lg" %>
</div>
<div class="form-group">
<%= i.submit class: "btn btn-success btn-xl"%>
</div>
<% end %> 
