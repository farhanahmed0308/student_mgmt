<h1>This is index form</h1>

<table>
    <thead>
        <tr>
            <th>frist_name</th>
            <th>last_name</th>
            <th>email</th>
            <th>DOB</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |i|%>
        <tr>
            <td><%= i.first_name%></td>
            <td><%= i.last_name%></td>
            <td><%= i.email%></td>
            <td><%= i.date_of_birth%></td>
            <td><%= link_to "view", student_path(i)%></td>
            <td><%= link_to "edit", edit_student_path(i)%></td>

            <td><%= link_to "delete", student_path(i), data: {turbo_method: :delete, turbo_confirm: "are you sure?"}, class: "btn btn-success btn-md", role: "button"%></td>


        </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "new", new_student_path%>
